<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lin1"
        android:orientation="horizontal"
        android:background="@color/dark_pink"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:id="@+id/back"
           android:text="Back"
           android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:text="Car Enquiry"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tx1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="Choose a Date"
                        android:textColor="@color/dark_pink"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_toEndOf="@+id/tx1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/calender"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="16/09/2015"
                            android:textColor="@color/black"
                            android:id="@+id/calender_txt" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="5dp"
                            android:tint="@color/dark_pink"
                            android:src="@drawable/date" />
                        <View
                            android:layout_below="@+id/calender_txt"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/dark_pink"/>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Location"
                        android:textColor="@color/dark_pink"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        >

                        <Spinner
                            android:id="@+id/location_spinner"
                            android:layout_width="fill_parent"
                            style="@style/spinner_style"
                            android:layout_height="wrap_content"
                            />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Car Pickup Time"
                        android:textColor="@color/dark_pink"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        >

                        <Spinner
                            android:id="@+id/time_spinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="@style/spinner_style"
                            />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Address"
                        android:textColor="@color/dark_pink"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:hint="Enter your address"
                            android:background="@android:color/transparent"
                            android:paddingLeft="5dp"
                            android:id="@+id/address"

                            android:textSize="13sp" />
                        <View
                            android:layout_below="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/dark_pink"/>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Need Loaner vehicle ?"
                        android:textColor="@color/dark_pink"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                       style="@style/radionbutton"
                        android:drawablePadding="10dp"
                        android:buttonTint="@color/dark_pink"
                        android:text=" Yes"
                        android:textColor="@color/dark_pink"
                        android:checked="true"
                        android:textSize="13sp" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                       style="@style/radionbutton"
                        android:textColor="@color/dark_pink"
                        android:padding="7dp"
                        android:buttonTint="@color/dark_pink"
                        android:checked="false"
                        android:text="No"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Choose Your Service"
                        android:textColor="@color/dark_pink"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/painting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:padding="4dp"
                        android:checked="true"
                        android:buttonTint="@color/dark_pink"
                        android:text="Painting"
                        android:textColor="@color/dark_pink"
                        android:textSize="13sp" />

                    <CheckBox
                        android:id="@+id/denting"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="false"

                        android:padding="3dp"
                        android:buttonTint="@color/dark_pink"
                        android:text="Denting"
                        android:textColor="@color/dark_pink"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Car Comments"
                        android:textColor="@color/dark_pink"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@android:color/transparent"
                            android:paddingLeft="5dp"
                            android:hint="Enter your comments"
                            android:id="@+id/enquiry"
                            android:textSize="13sp"
                         />
                        <View
                            android:layout_below="@+id/enquiry"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/dark_pink"/>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="left|center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Upload your services images"
                        android:textColor="@color/dark_pink"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:tint="@color/dark_pink"
                        android:id="@+id/click"
                        android:src="@drawable/upload" />


                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/click"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/recycler_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" />
                <Button
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:id="@+id/submit"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/notific"
                    android:text="BOOK AN APPOINTMENT"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
