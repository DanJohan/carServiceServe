<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.4"
        android:background="@drawable/bg_tranparent_image"
        android:focusable="false">

        <ImageView
            android:id="@+id/img_first"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/back_image" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="@android:color/white"
            android:layout_gravity="center|bottom"
            android:src="@drawable/logo_main_icon"
            app:civ_border_color="#ffffff"
            app:civ_border_width="10dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:weightSum="8"
        android:background="@drawable/bg_tranparent_image"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="150dp"
            android:orientation="horizontal"
            android:background="@drawable/service_button"
            android:layout_height="0dp">
            <ImageView
                android:src="@drawable/service"
                android:padding="5dp"
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="Service"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:background="@drawable/car_loan_button"
            android:layout_height="0dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center|right"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="Car Loan"/>
            <ImageView
                android:padding="5dp"
                android:src="@drawable/car_loan"
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:layout_height="30dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="150dp"
            android:orientation="horizontal"
            android:background="@drawable/profile_button"
            android:layout_height="0dp">
            <ImageView
                android:src="@drawable/profile"
                android:layout_width="60dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_height="30dp" />
            <TextView
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="Profile"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:background="@drawable/payment_button"
            android:layout_height="0dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center|right"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="Payment"/>
            <ImageView
                android:padding="5dp"
                android:src="@drawable/payment"
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:layout_height="30dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="150dp"
            android:orientation="horizontal"
            android:background="@drawable/notification_button"
            android:layout_height="0dp">
            <ImageView
                android:src="@drawable/notifcation"
                android:layout_width="60dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_height="30dp" />
            <TextView
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="Notification"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:background="@drawable/sell_car_button"
            android:layout_height="0dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center|right"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="Sell Car"/>
            <ImageView
                android:padding="5dp"
                android:src="@drawable/sell_car"
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:layout_height="30dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="150dp"
            android:orientation="horizontal"
            android:background="@drawable/history"
            android:layout_height="0dp">
            <ImageView
                android:src="@drawable/service"
                android:layout_width="60dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_height="30dp" />
            <TextView
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="History"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:background="@drawable/special_offer_button"
            android:layout_height="0dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center|right"
                android:textSize="12sp"
                android:textScaleX="0.8"
                android:textColor="@android:color/white"
                android:text="Special Offers"/>
            <ImageView
                android:padding="5dp"
                android:src="@drawable/special_offer"
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:layout_height="30dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>